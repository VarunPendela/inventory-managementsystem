<%- include('partials/header', { title: 'Edit Purchase' }) %>

<div class="max-w-xl mx-auto mt-10 bg-white shadow-md rounded p-6">
  <h2 class="text-2xl font-bold mb-6 text-center text-yellow-600">Edit Purchase</h2>

  <form method="POST" action="/purchases/update" class="space-y-4">
    <input type="hidden" name="id" value="<%= purchase.id %>">

    <div>
      <label class="block font-medium mb-1">Supplier Name</label>
      <input type="text" name="supplier" value="<%= purchase.supplier %>" required
        class="w-full px-4 py-2 border rounded focus:outline-none focus:ring-2 focus:ring-yellow-500" />
    </div>

    <div>
      <label class="block font-medium mb-1">Phone</label>
      <input type="text" name="supplier_phone" value="<%= purchase.supplier_phone %>" required
        class="w-full px-4 py-2 border rounded focus:outline-none focus:ring-2 focus:ring-yellow-500" />
    </div>

    <div>
      <label class="block font-medium mb-1">Quantity</label>
      <input type="number" name="quantity" value="<%= purchase.quantity %>" required
        class="w-full px-4 py-2 border rounded focus:outline-none focus:ring-2 focus:ring-yellow-500" />
    </div>

    <div>
      <label class="block font-medium mb-1">Price per Unit</label>
      <input type="number" step="0.01" name="price_per_unit" value="<%= purchase.price_per_unit %>" required
        class="w-full px-4 py-2 border rounded focus:outline-none focus:ring-2 focus:ring-yellow-500" />
    </div>

    <button type="submit"
      class="w-full bg-yellow-600 text-white py-2 px-4 rounded hover:bg-yellow-700 transition">Update Purchase</button>
  </form>
</div>

<%- include('partials/footer') %>
