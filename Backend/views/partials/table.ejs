  <p>No <%= type %> records found.</p>
<% } else { %>
  <table border="1" cellpadding="5" cellspacing="0">
    <thead>
      <tr>
        <% Object.keys(records[0]).forEach(key => { %>
          <th><%= key %></th>
          <% if (key === 'id') { %><th>Actions</th><% } %>
        <% }); %>
      </tr>
    </thead>
    <tbody>
      <% records.forEach(row => { %>
        <tr>
          <% Object.entries(row).forEach(([key, value]) => { %>
            <td><%= value %></td>
            <% if (key === 'id') { %>
  <td>
