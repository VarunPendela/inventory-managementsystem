<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>


<script>
  const ctx = document.getElementById('summaryChart').getContext('2d');

  const summaryChart = new Chart(ctx, {
    type: 'doughnut',
    data: {
      labels: ['Sales (â‚¹)', 'Purchases (â‚¹)'],
      datasets: [{
        label: 'Today Amount',
        data: [<%= saleAmount %>, <%= purchaseAmount %>],
        backgroundColor: ['#3b82f6', '#10b981'],
        hoverOffset: 10
      }]
    },
    options: {
      responsive: true,
      plugins: {
        legend: {
          position: 'bottom',
        },
      }
    }
  });
</script>
<script>
  const revenueChart = new Chart(document.getElementById('revenueChart').getContext('2d'), {
    type: 'bar',
    data: {
      labels: ['Today', 'Weekly', 'Monthly'],
      datasets: [{
        label: 'Net Revenue (â‚¹)',
        data: [<%= revenueToday %>, <%= revenueWeek %>, <%= revenueMonth %>],
        backgroundColor: ['#0ea5e9', '#10b981', '#6366f1'],
        borderRadius: 8
      }]
    },
    options: {
      responsive: true,
      scales: {
        y: {
          beginAtZero: true,
          ticks: {
            callback: value => 'â‚¹' + value
          }
        }
      }
    }
  });
</script>

<script>
  function showSection(id) {
    document.querySelectorAll(".data-section").forEach(section => {
      section.classList.add("hidden");
    });
    document.getElementById(id).classList.remove("hidden");
  }

  // Chart setup (if you're using Chart.js with summaryChart)
</script>

