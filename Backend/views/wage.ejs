<%- include('partials/header', { title: 'Wage Calculator' }) %>

<div class="max-w-xl mx-auto mt-10 bg-white shadow-md rounded p-6">
  <h2 class="text-2xl font-bold mb-6 text-purple-700 text-center">Wage Calculator</h2>

  <form method="POST" action="/wage" class="space-y-4">
    <div>
      <label class="block font-medium mb-1">Wage Rate per Bag</label>
      <input type="number" name="amount" step="0.01" required
             class="w-full px-4 py-2 border rounded focus:outline-none focus:ring-2 focus:ring-purple-500" />
    </div>

    <button type="submit"
            class="w-full bg-purple-600 text-white py-2 rounded hover:bg-purple-700 transition">
      Calculate Wage
    </button>
  </form>

  <% if (wage !== null) { %>
    <div class="mt-6 text-center bg-gray-100 p-4 rounded">
      <h3 class="text-xl font-semibold text-green-700">
        Today's total wage to be given: â‚¹<%= wage.toFixed(2) %>
      </h3>
    </div>
  <% } %>
</div>

<%- include('partials/footer') %>
